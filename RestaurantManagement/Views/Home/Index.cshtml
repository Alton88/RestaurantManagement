@model RestaurantManagement.Models.Reservation

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/HomePage.cshtml";
}

<section id="reservation" class="description_content">
    <div class="featured background_content">
        <h1>Reserve a Table!</h1>
    </div>
    <div class="text-content container">
        <div class="inner contact">

            <div class="contact-form">


                @using (Html.BeginForm("MakeReservation", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 col-md-6 col-xs-12">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-xs-6">

                                            <div class="col-lg-12">
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form" , @placeholder = "First Name" })
                                            </div>
                                            <div class="col-lg-12">
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form", @placeholder = "Last Name" })
                                            </div>
                                            <div class="col-lg-12">
                                                @Html.TextBoxFor(m => m.Phone, new { @class = "form", @placeholder = "Phone" })
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-xs-6">
                                            <div class="col-lg-12">
                                                @Html.TextBoxFor(m => m.NumberOfGuests, new { @class = "form", @placeholder = "Number of Guest"})
                                            </div>
                                            <div class="col-lg-12" input[type=text]>
                                                @Html.TextBoxFor(m => m.ReservationTime, null, new { type = "time", @class = "form"})
                                            </div>
                                            <div class="col-lg-12">
                                                @Html.TextBoxFor(m => m.ReservationDate, new { type = "date", @class = "form", @placeholder = "Phone" })
                                            </div>
                                        </div>
                                        <div class="col-xs-offset-1">

                                            <button type="submit"  value="MakeReservation" class="text-center form-btn form-btn">Reserve</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-6 col-xs-12">

                                    <div class="right-text">
                                        <h2>Hours</h2><hr>
                                        <p>Monday to Friday: 10:30 AM - 2:30 PM</p>
                                        <p>Saturday & Sunday: 11:00 AM - 3:00 PM</p>
                                        <p>Monday to Friday: 5:00 PM - 11:00 PM</p>
                                        <p>Saturday & Sunday: 5:00 PM - 12:00 AM</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clear"></div>
                }
            </div>
        </div>
    </div>
</section>

<section class="social_connect">
    <div class="text-content container">
        <div class="col-md-6">
            <span class="social_heading">ADDRESS : 333 N Plankinton Ave</span>

        </div>
        <div class="col-md-4">
            <span class="social_heading">OR DIAL</span>
            <span class="social_info"><a class="color_animation" href="tel:414-555-1234">414-555-1234</a></span>
        </div>
    </div>
</section>

<section id="contact">
    <div class="map">
        <iframe width="100%"
                height="450"
                frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBVKUbJ2CC1fdoWs7ir-PEPopeUrYyQm_g&q=333PlankingtonAve,Milwaukee+WI" allowfullscreen></iframe>

    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="inner contact">

                    <div class="contact-form">

                        <form id="contact-us" method="post" action="contact.php">

                            <div class="col-md-6 ">

                                <input type="text" name="name" id="name" required="required" class="form" placeholder="Name" />

                                <input type="email" name="email" id="email" required="required" class="form" placeholder="Email" />

                                <input type="text" name="subject" id="subject" required="required" class="form" placeholder="Subject" />
                            </div>

                            <div class="col-md-6">

                                <textarea name="message" id="message" class="form textarea" placeholder="Message"></textarea>
                            </div>

                            <div class="relative fullwidth col-xs-12">

                                <button type="submit" id="submit" name="submit" class="form-btn">Send Message</button>
                            </div>

                            <div class="clear"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="sub_footer">
    <div class="container">
        <div class="col-md-4"><p class="sub-footer-text text-center">&copy; Restaurant 2016</p></div>
        <div class="col-md-4">
            <p class="sub-footer-text text-center">Back to <a href="#top">TOP</a></p>
        </div>
        <div class="col-md-4"><p class="sub-footer-text text-center"></p></div>
    </div>
</footer>